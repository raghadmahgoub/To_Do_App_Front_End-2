<ul class="card">
<h2>Raghad's Todo List</h2>
<% @todos.each do |todo| %>
    <li>
      <input type="checkbox" name=""/>
      <a href="show/<%= todo.id %>"><%= todo.description %></a>
      <span style="display:inline" class="pomodoro-estimate small-pomodoro-estimate"><%= todo.pomodoro_estimate %> Pomodoros</span>
    </li>
  <% end %>
</ul>
    
<div id="new-todo-block">
  <a href="/todo/new" class="button add-new-todo-button" id="add-new-todo-button">Add a todo</a>
</div>